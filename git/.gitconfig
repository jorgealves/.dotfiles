[user]
  name = Jorge Alves

[author]
  name = Jorge Alves

[commiter]
  name = Jorge Alves

[include]
  path = ~/.gitconfig.private

[includeIf "gitdir:~/projects/worten/**"]
  path = ~/.gitconfig_wrt

[includeIf "gitdir:~/projects/devoteam/**"]
  path = ~/.gitconfig_dvt

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[color]
  advice = always
  branch = always
  diff = always
  grep = always
  interactive = always
  push = always
  showBranch = always
  remote = always
  status = always
  ui = always
  
[alias]
  logog = "log --oneline --graph --decorate"

[commit]
  gpgsign = true

[fetch]
  prune = true
  all = true

[grep]
  lineNumber = true

[column]
  ui = always dense

[blame]
  coloring = highlightRecent

[gpg]
  format = ssh

[help]
  autocorrect = prompt
  browser = google-chrome
  format = web

[init]
  defaultBranch = main

[safe]
  directory = ~/projects

